<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HCWAssistsV4" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.HCWAssistsV4.v2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_300</item>
        <item name="colorPrimaryVariant">@color/teal_100</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <!-- Alert Dialog -->
    <style name="MyThemeOverlay.MaterialComponents.MaterialAlertDialog.Red" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextAppearance.MaterialComponents.Body2.Red</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog</item>
        <item name="android:panelColorBackground">@color/red</item>
    </style>
    <style name="MyThemeOverlay.MaterialComponents.MaterialAlertDialog.Amber" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextAppearance.MaterialComponents.Body2.Amber</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog</item>
        <item name="android:panelColorBackground">@color/amber</item>
    </style>
    <style name="MyThemeOverlay.MaterialComponents.MaterialAlertDialog.Yellow" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextAppearance.MaterialComponents.Body2.Yellow</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog</item>
        <item name="android:panelColorBackground">@color/yellow</item>
    </style>
    <style name="MyThemeOverlay.MaterialComponents.MaterialAlertDialog.Green" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextAppearance.MaterialComponents.Body2.Green</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog</item>
        <item name="android:panelColorBackground">@color/green</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">@color/red</item>
    </style>

    <style name="BodyTextAppearance.MaterialComponents.Body2.Red" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/red</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">sans-serif-condensed-light</item>
    </style>
    <style name="BodyTextAppearance.MaterialComponents.Body2.Amber" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/amber</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">sans-serif-condensed-light</item>
    </style>
    <style name="BodyTextAppearance.MaterialComponents.Body2.Yellow" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/yellow</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">sans-serif-condensed-light</item>
    </style>
    <style name="BodyTextAppearance.MaterialComponents.Body2.Green" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/green</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">sans-serif-condensed-light</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/teal_300</item>
        <item name="colorPrimaryVariant">@color/teal_100</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

</resources>